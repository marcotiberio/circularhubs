<?xml version="1.0"?>
<ruleset name="ACFComposer PHP Coding Standards">
  <description>Coding Standards for ACFComposer</description>

  <file>.</file>

  <arg name="extensions" value="php"/>

  <exclude-pattern>*/node_modules/*</exclude-pattern>
  <exclude-pattern>*/vendor/*</exclude-pattern>

  <arg value="-colors"/>

  <!-- Show sniff codes in all reports -->
  <arg value="s"/>
  <!-- Exclude Warnings -->
  <arg value="n"/>

  <rule ref="PSR2"/>
</ruleset>
