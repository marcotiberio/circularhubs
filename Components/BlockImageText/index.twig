<div class="flyntComponent {% if backgroundColor %}{{ backgroundColor }}{% endif %}" id="{{ sectionId|lower|replace({' ': '-'})}}" is="flynt-block-image-text">
  <div class="sectionId">{{ sectionId }}</div>
  <div class="container boxed">
    {% if preContent %}
      <div class="preContent h2">{{ preContent|e }}</div>
    {% endif %}
    <div class="grid8 box box--{{ imagePosition }}">
      <div class="box-inner box-inner--image">
        <figure class="figure">
          <img class="figure-image lazyload"
            src="{{ image.src|resize(32) }}"
            data-srcset="{{function('wp_get_attachment_image_srcset', image.id)}}"
            data-sizes="auto">
          {% if image.caption %}
            <figcaption class="figure-caption">{{ image.caption|e }}</figcaption>
          {% endif %}
        </figure>
      </div>
      <div class="box-inner box-inner--content">
        {{ contentHtml|e('wp_kses_post') }}
        {% if ctaLink %}
          <a href="{{ ctaLink.url }}"{% if ctaLink.target %} target="{{ ctaLink.target }}" rel="noreferrer noopener"{% endif %} class="button">
            {{ ctaLink.title|e }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>
