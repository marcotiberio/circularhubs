<div class="flyntComponent" id="{{ preContentHtml|lower|replace({' ': ''})}}" is="flynt-slider-text">
  <script type="application/json">{{ jsonData|json_encode }}</script>
  <div class="container">
    {# {% if preContentHtml %}
      <div class="preContent">
        {{ preContentHtml|e('wp_kses_post') }}
      </div>
    {% endif %} #}
    <div data-slider class="slider swiper-container">
      <div class="swiper-wrapper">
        {% for box in contentBoxes %}
          <div class="slider-item swiper-slide" style="background-color: {{ box.panelTextboxbgcolor }};">
            <div class="slider-item-inner">{{ box.panelTextbox|e('wp_kses_custom') }}</div>
          </div>
        {% endfor %}
      </div>
      <button type="button" data-slider-button="prev" class="slider-button slider-button--prev">
        <i data-feather="arrow-left"></i>
      </button>
      <button type="button" data-slider-button="next" class="slider-button slider-button--next">
        <i data-feather="arrow-right"></i>
      </button>
    </div>
  </div>
</div>
