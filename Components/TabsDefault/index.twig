<div class="flyntComponent boxed" is="flynt-tabs-default">
  <div class="container">
    {% if preContent %}
      <div class="preContent h2 textGradientOrange">
        {{ preContent|e('wp_kses_post')}}
      </div>
    {% endif %}
    <div class="content">
      <div class="tabs">
        <div class="tabs-header">
          {% for panel in accordionPanels %}
            <div class="tab-title {{ loop.index }}"><p>{{ panel.panelTitle }}</p></div>
          {% endfor %}
        </div>
        {% for panel in accordionPanels %}
          <div class="tab-content {{ loop.index }} {{ panel.additionalCompany }}">
            <div class="tab-content--inner" id="tabInner1">
              <img class="image lazyload"
                src="{{ panel.panelImage.src|resize(32) }}"
                data-srcset="{{function('wp_get_attachment_image_srcset', panel.panelImage.id)}}"
                data-sizes="auto">
              <div class="text">
              {{ panel.panelContent|e('wp_kses_post') }}
              </div>
            </div>
            <div class="tab-content--inner" id="tabInner2">
              <img class="image lazyload"
                src="{{ panel.panelImage2.src|resize(32) }}"
                data-srcset="{{function('wp_get_attachment_image_srcset', panel.panelImage2.id)}}"
                data-sizes="auto">
              <div class="text">
              {{ panel.panelContent2|e('wp_kses_post') }}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
