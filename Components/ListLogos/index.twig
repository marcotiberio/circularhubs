<div class="flyntComponent" is="flynt-list-logos">
  <div class="container boxed grid8">
    {% if preContentHtml %}
      <div class="preContent">
        {{ preContentHtml|e('wp_kses_post') }}
      </div>
    {% endif %}
    <div class="content">
      <ul class="list">
        {% for logo in logos %}
          <li class="item">
            <img class="figure-image lazyload"
              src="{{ logo.logoImage.src }}"
              data-srcset="{{function('wp_get_attachment_image_srcset', logo.logoImage.id)}}"
              data-sizes="auto">
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
